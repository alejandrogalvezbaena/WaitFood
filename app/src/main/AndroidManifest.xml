<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.galvezagb50.waitfood">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_waitfood"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity" android:theme="@style/AppThemeNoBar" android:screenOrientation="portrait"/>
        <activity
            android:name=".FirstActivity"
            android:theme="@style/AppThemeNoBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuActivity" android:screenOrientation="portrait" />
        <activity android:name=".ProfileActivity" android:label="@string/toolbarProfileName" android:screenOrientation="portrait" />
        <activity android:name=".AddProductActivity" android:label="@string/toolbarAddProductName" android:screenOrientation="portrait" />
        <activity android:name=".ExploreActivity" android:label="@string/toolbarExplorerName" android:screenOrientation="portrait" />
        <activity android:name=".NewOrder" android:label="@string/toolbarNewOrderName" android:screenOrientation="portrait"></activity>
    </application>

</manifest>